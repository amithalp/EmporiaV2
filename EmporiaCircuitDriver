 * Emporia Circuit Driver
 *
 * This driver acts as the child device for individual circuits monitored by Emporia Vue.
 * - Receives and displays Usage and Energy Unit data.
 */

static String version() { return "1.0.1" }

metadata {
    definition(
        name: "Emporia Circuit Driver",
        namespace: "amithalp",
        author: "Amit Halperin",
        importUrl: ""
    ) {
        capability "PowerMeter"
        capability "EnergyMeter"
        capability "Refresh"

        attribute "usagePercentage", "number" // For percentage of total
        attribute "usage", "string"           // raw usage data (string to support $ when energyUnit=Dollars)
        attribute "energyUnit", "string"
        attribute "lastUpdated", "string"
        attribute "retrievalFrequency", "string"
        attribute "power", "number"
        attribute "energy", "number"
        attribute "powerUnit", "string"

        attribute "driverVersion", "string"
    }
}

preferences {
    input name: "logEnable", type: "bool", title: "Enable Debug Logging", defaultValue: true
}

def installed() {
    log.info "Emporia Circuit Driver installed for device ${device.displayName}"
    initialize()
}

def updated() {
    log.info "Emporia Circuit Driver updated for device ${device.displayName}"
    initialize()
}

def initialize() {
    sendEvent(name: "driverVersion", value: version())

    if (logEnable) {
        log.debug "Initializing Emporia Circuit Driver v${version()} for ${device.displayName}"
        runIn(7200, toggleDebugLogging) // Disable debug logging after 120 minutes
    }
}

def toggleDebugLogging() {
    log.warn "Disabling debug logging for ${device.displayName} after 120 minutes."
    device.updateSetting("logEnable", [value: "false", type: "bool"])
}

/**
 * If a user clicks Refresh on the child device:
 * This triggers parent.refreshData() which refreshes the *parent Emporia deviceGid*
 * (i.e., the EmporiaVue<gid> parent device) â€” not all devices globally.
 */
def refresh() {
    if (logEnable) log.debug "Refresh called on ${device.displayName}"

    try {
        if (parent && parent.metaClass?.respondsTo(parent, "refreshData")) {
            parent.refreshData()
        } else {
            log.warn "Parent driver refreshData() not available for ${device.displayName}"
        }
    } catch (e) {
        log.error "Error while requesting refresh from ${device.displayName}: ${e}"
    }
}
